parts:
    quagga: 
        build-packages: 
           - autoconf
           - automake
           - libtool
           - make
           - gawk
           - libreadline-dev
           - texinfo
           - dejagnu
           - libncurses5-dev
           - texlive-latex-base
           - texlive-generic-recommended
           - libcap-dev
           - imagemagick
           - ghostscript
           - groff
           - hardening-wrapper
           - libpcre3-dev
           - chrpath
        stage-packages:
           - coreutils
           - iproute2
           - logrotate
           - libcap2
           - libc6
           - libtinfo5
           - libreadline6
        plugin: autotools
        source: ../quagga-@PACKAGE_VERSION@.tar.gz
        configflags:
            - --with-cflags=-g
            - --with-cflags=-O0
            - --with-cflags=-std=gnu99
            - --with-cflags=-fpie
            - --with-cflags=-fno-omit-frame-pointer
            - --with-cflags=-Wall
            - --enable-vtysh
            - --enable-isisd
            - --enable-watchquagga
            - --enable-ospfclient=yes
            - --enable-ospfapi=yes
            - --enable-multipath=64
            - --enable-rtadv
            - --enable-irdp
            - --enable-gcc-rdynamic
            - --enable-user=root
            - --enable-group=root
            - --enable-pimd
            - --enable-configfile-mask=0640
            - --enable-logfile-mask=0640 
            - --localstatedir=/var/run
            - --sbindir=/sbin
            - --bindir=/bin
            - --sysconfdir=/etc/quagga
            - --with-pkg-extra-version=@PACKAGE_EXTRAVERSION@
    quagga-defaults:
        plugin: dump
        source: defaults
        organize:
            zebra.conf.default: etc/quagga/zebra.conf.default
            bgpd.conf.default: etc/quagga/bgpd.conf.default
            isisd.conf.default: etc/quagga/isisd.conf.default
            ospf6d.conf.default: etc/quagga/ospf6d.conf.default
            ospfd.conf.default: etc/quagga/ospfd.conf.default
            pimd.conf.default: etc/quagga/pimd.conf.default
            ripd.conf.default: etc/quagga/ripd.conf.default
            ripngd.conf.default: etc/quagga/ripngd.conf.default
    quagga-scripts:
        plugin: make
        source: scripts
    docs:
        plugin: dump
        source: .
        organize:
            README.usage.md: doc/README.usage.md
            README.snap_build.md: doc/README.snap_build.md

